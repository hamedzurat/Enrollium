<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="15" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="enrollium.client.MainController">
    <padding>
        <Insets bottom="15" left="15" right="15" top="15" />
    </padding>

    <!-- Course Registration Section (Without Tab) -->
    <VBox alignment="TOP_CENTER" spacing="15">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>
        <Text style="-fx-font-size: 24px;" text="Course Registration" />

        <GridPane fx:id="planner" hgap="10" style="-fx-background-color: #f9f9f9;                          -fx-border-color: #ccc;                          -fx-border-width: 1px;" vgap="10">
            <!-- Dynamic content will be added in Controller -->
        </GridPane>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="takeCourseButton" style="-fx-background-color: lightgreen;                                -fx-font-weight: bold;" text="Take Course" />
        </HBox>

        <Text fx:id="courseFeedback" style="-fx-fill: green;                          -fx-font-size: 16px;" />
    </VBox>
</VBox>
